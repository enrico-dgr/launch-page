{
  "compilerOptions": {
    "module": "commonjs",
    "baseUrl": ".",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "jsx": "preserve",
    "sourceMap": true,
    "target": "es2016",
    "removeComments": true,
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["./src", "./examples", "./playground", "./test"],
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "build",
    "srcOld",
    "docs",
    "src/localCode"
  ]
}
